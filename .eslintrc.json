{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "Uint8Array": false,
        "describe": false,
        "before": false,
        "it": false,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": { "ecmaVersion": 6 },
    "rules": {
        "no-console": [
            "error",
            {"allow": ["warn"]}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}